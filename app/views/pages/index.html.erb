<h2>Welcome! Enjoy our Recipe Application</h2>

<div>
  <ul class="login-bar">
    <% if user_signed_in? %>
      <li>
        <%= button_to "Sign Out", destroy_user_session_path, class: "sign-btn", method: :delete %>
      </li>
    <% else %>
      <li>
        <%= link_to "Sign In", new_user_session_path, class: "sign-btn" %>
        <%= link_to "Sign Up", new_user_registration_path, class: "sign-btn" %>
      </li>
    <% end %>
  </ul>
</div>

<nav>
  <ul class="navigation">
    <li class="nav-li"> <%= link_to "Food", foods_path, class: "link" %></li>
    <li class="nav-li"> <%= link_to "Recipes", recipes_path, class: "link"%></li>
    <li class="nav-li"> <%= link_to "Inventory", inventories_path, class: "link link-invent"%></li>
    <li class="nav-li"> <%= link_to "Public", public_recipes_path, class: "link link-invent"%></li>
  </ul>
</nav>
