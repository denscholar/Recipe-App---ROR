<div class="d-flex justify-content-between">
  <nav class="navbar navbar-expand-lg">
    <ul class="navigation justify-content-between list-unstyled">
      <li class="nav-li"> <%= link_to "Food", foods_path, class: "link" %></li>
      <li class="nav-li"> <%= link_to "Recipes", recipes_path, class: "link"%></li>
      <li class="nav-li"> <%= link_to "Inventory", inventories_path, class: "link link-invent"%></li>
