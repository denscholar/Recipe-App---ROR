<div class="modal">
  <%= turbo_frame_tag :modal %>
</div>
<div class=" container col-12 p-2">
  <h2 class="recipe_title"> <%= @recipe.name%></h2>
  <div class="show_recipe d-flex">
    <section class="first_section col-10 justify-content-center">
      <ul class="list-unstyled col-8 p-4">
        <li>preparation time: <%= @recipe.preparation_time%> hrs</li>
        <li>Cooking time: <%= @recipe.cooking_time%> hrs</li>
        <li><%= @recipe.description%></li>
      </ul>
    </section>
    <section class="second_section">
      <ul class="list-unstyled">
        <% if @recipe.public == true %>
          <li class="public">Public</li>
        <% else %>
          <li class="private">Private</li>
        <% end %>
      </ul>
      <div class="buttons-container">
        <% if @recipe.user == @current_user%>
        <button><%= link_to 'Recipe Details', new_user_recipe_path(user_id: @recipe.user_id, recipe_id: @recipe.id) %></button>
        <% end %>
        <%=button_to link_to "Generate Shopping List", shopping_lists_path(recipe_id: @recipe.id), data:{turbo_frame: "modal"}, class: "btn btn-primary" %>
      </div>
    </section>
  </div>
  <table class="table_container">
    <tr>
      <th>Food</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Actions</th>
    </tr>
    <% @recipe.recipe_foods.each do |recipe_food| %>
      <tr>
        <td><%= recipe_food.food.name %></td>
        <td><p><%= recipe_food.quantity %> <%=recipe_food.food.measurement_unit%></p></td>
        <td><%= recipe_food.food.price %></td>
        <td>
          <% if @recipe.user == @current_user %>
            <%= button_to 'Delete', user_recipe_food_path(user_id: @recipe.user_id, recipe_id: @recipe.id, recipe_food_id: recipe_food.id), method: :delete%>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
</div>