<%= link_to "Back", root_path, class: "home-btn" %>

<div class="index flex-col">
  <h1>Add New Recipe</h1>
  <div class="container p-2">
    <%= form_with(scope: :recipes, url: recipes_path, method: :post, local: true) do |f| %>
      <div class="form-input">
        <%= f.text_field :name, placeholder: "Name", rows: "8", required: true %><br />
      </div>
      <div class="form-input">
        <%= f.text_field :description, placeholder: "Description", rows: "8", required: true %><br />
      </div>
      <div class="form-input">
        <%= f.number_field :preparation_time, placeholder: "Preparation Time", rows: "8", required: true %><br />
      </div>
      <div class="form-input">
        <%= f.number_field :cooking_time, placeholder: "Cooking Time", rows: "8", required: true %><br />
      </div>
      <div>
        <%= f.label :public %><br />
        <%= f.check_box :public %>
      </div>
      <div>
        <%= f.submit "Add Recipe" %>
      </div>
    <% end %>
  </div>
</div>
