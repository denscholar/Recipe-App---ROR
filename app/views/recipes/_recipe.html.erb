<div class='container border m-2 d-flex'>
  <div class="p-2">
    <h4><%= link_to (recipe.name), user_recipe_path(recipe.user_id, recipe.id) %></h4>

    <% if owner?(recipe) %>
    <div><%= button_to "Remove", user_recipe_path(recipe.user_id, recipe.id),
    method: :delete %></div>
    <% end %>
  </div>
  <p><%= recipe.description%></p>
</div>