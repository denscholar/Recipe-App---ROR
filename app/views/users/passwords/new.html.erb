<div class="col-lg-6 mx-lg-auto">
  <div class="card shadow">
    <div class="card-header">
        <h4 class="card-title text-center">Forgot your password?</h4>
    </div>
    <div class="card-body">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control mt-3' %>
  </div>

  <div class="actions mt-3">
    <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
    </div>
  </div>
</div>


